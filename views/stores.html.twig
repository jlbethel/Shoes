<html>
    <head>
        <title>List of Available Stores</title>
    </head>
    <body>
        <h1>Stores</h1>

        {% if stores is not empty %}
            <p>Here are the available stores:</p>
            <ul>
                {% for store in stores %}
                <form action="/stores/{{ store.getId }}">
                    <button type="submit">{{ store.getName }}</button>
                </form>
                {% endfor %}
            </ul>
        {% else %}
            <p>There are no available stores.</p>
        {% endif %}

        <form action="/stores" method="post">
            <label for="store_name">Add a store:</label>
            <input id="store_name" name="store_name" placeholder="Store Name">
            <button type="submit">Add</button>
        </form>

        <form action="/delete_stores" method="post">
            <button type="submit">Clear ALL stores</button>
        </form>

        <form action="/">
            <button type="submit">Back</button>
        </form>
    </body>
</html>
